@model AdotaPet.Models.Anuncio
@using System.Security.Claims

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Anúncio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaAnimal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RacaAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RacaAnimal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdadeAnimal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdadeAnimal)
        </dd>
    </dl>
</div>
<div>
    @if (User.FindFirst(ClaimTypes.NameIdentifier)?.Value == Model.UsuarioId.ToString())
     {
         <div>

        <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
     </div>

     }
    @if (User.Identity.IsAuthenticated && User.FindFirst(ClaimTypes.NameIdentifier)?.Value != Model.UsuarioId.ToString())
    {
        <div>

        <a asp-action="Report" asp-route-id="@Model?.Id">Denunciar</a> |
    </div>

    }
    @if (User.FindFirst(ClaimTypes.NameIdentifier)?.Value == Model.UsuarioId.ToString() || User.IsInRole("Admin"))
    {
        <div>
            <a asp-action="Delete" asp-route-id="@Model?.Id">Apagar</a> |
        </div>
    }
    <a asp-action="Index">Voltar</a>
</div>
