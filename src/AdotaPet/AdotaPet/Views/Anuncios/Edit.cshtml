@model AdotaPet.Models.Anuncio

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Anúncio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UsuarioId" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaAnimal" class="control-label"></label>
                <select asp-for="CategoriaAnimal" class="form-control" asp-items="Html.GetEnumSelectList<Categoria>()"></select>
                <span asp-validation-for="CategoriaAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RacaAnimal" class="control-label"></label>
                <input asp-for="RacaAnimal" class="form-control" />
                <span asp-validation-for="RacaAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdadeAnimal" class="control-label"></label>
                <input asp-for="IdadeAnimal" class="form-control" />
                <span asp-validation-for="IdadeAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
